<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/darkp</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:colorBackground">@color/white</item>
        <!--<item name="android:buttonStyle">@style/BeatBoxButton</item>-->
    </style>

    <!-- Example of inheritance -->
    <style name="BeatBoxButton" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/button_beat_box</item>
    </style>

    <style name="BeatPackButton" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/button_beat_pack</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>
